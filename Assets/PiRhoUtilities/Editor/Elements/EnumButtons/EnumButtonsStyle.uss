.pirho-enum-buttons-field
{
}

.pirho-enum-buttons-field__input
{
	flex-direction: row;
	flex-wrap: wrap;
	flex-grow: 1;
}

.pirho-enum-buttons-field__input__button
{
	flex-grow: 1;
	margin: 0;
	border-radius: 0;
	border-right-width: 0;
}

.pirho-enum-buttons-field__input__button--active
{
	background-color: var(--unity-colors-button-background-pressed);
}

.pirho-enum-buttons-field__input__button--first
{
	border-top-left-radius: 3px;
	border-bottom-left-radius: 3px;
}

.pirho-enum-buttons-field__input__button--last
{
	border-right-width: 1px;
	border-top-right-radius: 3px;
	border-bottom-right-radius: 3px;
}